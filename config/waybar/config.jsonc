{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 40,
    "modules-left": ["hyprland/workspaces"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["cpu", "tray", "network", "bluetooth", "battery", "custom/updates", "clock"],
 
    "hyprland/workspaces": {
        "format": "{name} {icon}",
        "format-icons": {
            "1": "🪬",
            "2": "🐙",
            "3": "👩🏿‍💻",
            "4": "🐱",
            "5": "㊙️",
            "6": "🔮",
            "7": "🌜",
            "8": "🎮"
        },
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": []
        },
        "active-only": false
    },

    "hyprland/window": {
        "rewrite": {
            "(.*) - Google Chrome": "🌎 $1"
        },
        "separate-outputs": true
    },

    "cpu": {
        "interval": 1,
        "format": "CPU: {usage}%",
        "tooltip": false
    },
    
    "tray": {
        "icon-size": 20,
        "spacing": 8
    },

    "network": {
        "format-icons": ["󰤯","󰤟","󰤢","󰤥","󰤨"],
        "format" : "{icon}",
        "format-wifi" : "{icon}",
        "format-ethernet" : "󰀂",
        "format-disconnected" : "󰖪",
        "tooltip-format-wifi": "{essid} ({frequency} GHz)\n⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
        "tooltip-format-ethernet": "D: {bandwidthDownBytes}  U: {bandwidthUpBytes}",
        "tooltip-format-disconnected": "Disconnected",
        "interval": 2,
        "nospacing": 1,
        "on-click": "kitty --class=Impala -e impala"
    },

    "bluetooth": {
        "format": "",
        "format-disabled": "󰂲",
        "format-connected": "",
        "tooltip-format": "Devices connected: {num_connections}",
        "on-click": "blueberry"
    },

    "battery": {
        "format": "B: {capacity}%",
        "interval": 60
    },

    "custom/updates": {
        "format": "U: {}",
        "hide-if-empty": true,
        "exec": "count=$(yay -Qua | wc -l); [ \"$count\" -eq 0 ] && echo '' || echo \"$count\"",
        "interval": 450,
        "on-click": "kitty zsh -c 'yay -Syu; read -n 1'"
    },

    "clock": {
        "locale": "ru_RU.UTF-8",
        "format": "{:%H:%M %d.%m}",
        "tooltip": false
    }
}
