{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 30,
    "modules-left": ["hyprland/workspaces"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["cpu", "tray", "battery", "clock"],
 
    "hyprland/workspaces": {
        "format": "{name} {icon}",
        "format-icons": {
            "1": "🪬",
            "2": "🐙",
            "3": "👩🏿‍💻",
            "4": "🐱",
            "5": "㊙️",
            "6": "🔮",
            "7": "🌜",
            "8": "🎮"
        },
        "active-only": false
    },

    "hyprland/window": {
        "rewrite": {
            "(.*) - Google Chrome": "🌎 $1"
        },
        "separate-outputs": true
    },

    "cpu": {
        "interval": 1,
        "format": "CPU: {usage}%",
        "tooltip": false
    },
    
    "tray": {
        "icon-size": 16,
        "spacing": 8
    },

    "battery": {
        "format": "B: {capacity}%",
        "interval": 60
    },

    "clock": {
        "locale": "ru_RU.UTF-8",
        "format": "{:%H:%M}",
        "tooltip": false
    }
}
