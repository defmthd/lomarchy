{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 40,
    "modules-left": ["hyprland/workspaces"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["cpu", "memory", "tray", "network", "bluetooth", "battery", "custom/updates", "clock"],
 
    "hyprland/workspaces": {
        "format": "{name} {icon}",
        "format-icons": {
            "1": "ğŸª¬",
            "2": "ğŸ™",
            "3": "ğŸ‘©ğŸ¿â€ğŸ’»",
            "4": "ğŸ±",
            "5": "ãŠ™ï¸",
            "6": "ğŸ”®",
            "7": "ğŸŒœ",
            "8": "ğŸ®"
        },
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": []
        },
        "active-only": false
    },

    "hyprland/window": {
        "rewrite": {
            "(.*) - Google Chrome": "ğŸŒ $1"
        },
        "separate-outputs": true
    },

    "cpu": {
        "interval": 2,
        "format": "CPU: {usage}%",
        "tooltip": false
    },

    "memory": {
        "interval": 2,
        "format": "MEM: {}%",
        "tooltip": false
    },
    
    "tray": {
        "icon-size": 20,
        "spacing": 8
    },

    "network": {
        "format-icons": ["ó°¤¯","ó°¤Ÿ","ó°¤¢","ó°¤¥","ó°¤¨"],
        "format" : "{icon}",
        "format-wifi" : "{icon}",
        "format-ethernet" : "ó°€‚",
        "format-disconnected" : "ó°–ª",
        "tooltip-format-wifi": "{essid} ({frequency} GHz)\nâ‡£{bandwidthDownBytes}  â‡¡{bandwidthUpBytes}",
        "tooltip-format-ethernet": "D: {bandwidthDownBytes}  U: {bandwidthUpBytes}",
        "tooltip-format-disconnected": "Disconnected",
        "interval": 2,
        "nospacing": 1,
        "on-click": "kitty --class=Impala -e impala"
    },

    "bluetooth": {
        "format": "ïŠ”",
        "format-disabled": "ó°‚²",
        "format-connected": "ïŠ”",
        "tooltip-format": "Devices connected: {num_connections}",
        "on-click": "blueberry"
    },

    "battery": {
        "format": "B: {capacity}%",
        "interval": 60
    },

    "custom/updates": {
        "format": "U: {}",
        "hide-if-empty": true,
        "exec": "count=$(pacman -Qu | wc -l); [ \"$count\" -eq 0 ] && echo '' || echo \"$count\"",
        "interval": 450,
        "on-click": "kitty zsh -c 'yay -Suy --noconfirm --needed; read -n 1'"
    },

    "clock": {
        "locale": "ru_RU.UTF-8",
        "format": "{:%H:%M}",
        "tooltip-format": "<span size='9pt'>{calendar}</span>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "format": {
                "months": "<span color='#ffead3'>{}</span>",
                "days": "<span color='#ffead3'>{}</span>",
                "weeks": "<span color='#ffead3'>W{}</span>",
                "weekdays": "<span color='#ffcc66'>{}</span>",
                "today": "<span color='#ff6699'><b>{}</b></span>"
            }
        }
    }
}
